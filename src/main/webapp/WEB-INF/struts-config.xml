<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
        "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>

    <form-beans>
        <form-bean name="IndexActionForm" type="actionForms.IndexActionForm"/>
    </form-beans>

    <action-mappings>
        <action path="/index"
                type="actions.IndexAction"
                name="IndexActionForm"
                scope="request"
                parameter="unused">
            <forward name="success" path="/WEB-INF/jsp/answer.jsp"
        </action>
    </action-mappings>


</struts-config>